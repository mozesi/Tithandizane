<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yoneco.ict.tithandizane">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission
        android:name="com.yoneco.ict.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="org.yoneco.ict.tithandizane.AboutActivity" android:label="About App"></activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name="org.yoneco.ict.tithandizane.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.ReportAbuse"
            android:label="Report Abuse"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.ServiceProviders"
            android:label="Service Providers"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.RssFeedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name="org.yoneco.ict.tithandizane.MapsService"
            android:label="@string/app_name"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.RssWebView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.ServiceDirectory"
            android:label="Service Directory"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"></meta-data>
        </activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.RegisterUser"
            android:label="Register User"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.RegisterService"
            android:label="Register Service"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="org.yoneco.ict.tithandizane.ProviderDetails"
            android:label="Provider Details"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>