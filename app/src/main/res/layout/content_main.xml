<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main_landing" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yoneco.ict.tithandizane"
    android:elevation="4dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" tools:showIn="@layout/app_bar_main"
    tools:context="org.yoneco.ict.tithandizane.MainActivity"
    android:background="#dfdddd">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/main">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Helpline Services"
            android:id="@+id/helpline_services"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textAlignment="viewStart"
            android:textColor="@color/textColorBlue"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="false"
            android:paddingBottom="0dp"
            android:paddingLeft="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Talk to a counsellor and report any abuse."
            android:id="@+id/helplineHint"
            android:layout_below="@+id/helpline_services"
            android:paddingLeft="5dp"
            android:textColor="@color/textColorBlue"
            android:textSize="12sp"
            android:textIsSelectable="true"
            android:layout_marginBottom="5dp"
            android:textStyle="italic" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/helplineHint"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="GBV Line"
                    android:id="@+id/textView2"
                    android:textColor="@color/textColorBlue"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_menu"
                    android:paddingTop="3dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/gbv"
                    android:src="@drawable/call"
                    android:background="@drawable/list_drawable"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:nestedScrollingEnabled="true" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Child helpline"
                    android:id="@+id/textView3"
                    android:textColor="@color/textColorBlue"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size_menu"
                    android:paddingTop="3dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/chilgHelpline"
                    android:src="@drawable/call"
                    android:padding="5dp"
                    android:background="@drawable/list_drawable"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.3">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Drug Line "
                    android:id="@+id/textView4"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/text_size_menu"
                    android:textAlignment="center"
                    android:paddingTop="3dp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/drugSubstance"
                    android:src="@drawable/call"
                    android:padding="5dp"
                    android:background="@drawable/list_drawable"
                    android:layout_margin="10dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_height="180dp"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:elevation="4dp"
        android:paddingBottom="10dp"
        android:background="#fff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/report_abuse"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/gbv"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/reportCase"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:text="report abuse"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/iwfMw"
                android:hapticFeedbackEnabled="true"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/iwf"
                    android:layout_weight=".4" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight=".2"
                    android:text="online abuse"
                    android:textAlignment="center"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/textColorBlue"
                    android:textSize="@dimen/text_size"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/service_providers"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/providers"
                    android:layout_weight=".4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="service points"
                    android:id="@+id/textView6"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight=".2"
                    android:textColor="@color/textColorBlue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/register_service"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView7"
                    android:src="@drawable/register"
                    android:layout_weight=".4"
                    android:nestedScrollingEnabled="false" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="register org."
                    android:id="@+id/textView9"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight=".2"
                    android:textColor="@color/textColorBlue"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/service_directory"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/directory"
                    android:layout_weight=".4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="service directory"
                    android:id="@+id/textView15"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight=".2"
                    android:textColor="@color/textColorBlue"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:id="@+id/register_user"
                android:background="@drawable/menu_states"
                android:padding="3dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/user"
                    android:src="@drawable/account"
                    android:layout_weight=".4" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="My profile"
                    android:id="@+id/profile"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_size"
                    android:layout_weight=".2"
                    android:textColor="@color/textColorBlue"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="110sp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#fff"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/panic_button"
                android:layout_width="120dp"
                android:layout_height="fill_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@drawable/panic_button"
                android:elevation="4dp"
                android:src="@drawable/alert" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#fff"
            android:elevation="4dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/message_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5sp"
                android:background="@drawable/message_box"
                android:nestedScrollingEnabled="true"
                android:padding="5dp" />

            <ProgressBar
                android:id="@+id/progress_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
</androidx.core.widget.NestedScrollView>

